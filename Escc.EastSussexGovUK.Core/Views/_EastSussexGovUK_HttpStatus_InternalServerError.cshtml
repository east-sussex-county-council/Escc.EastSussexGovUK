@model Escc.EastSussexGovUK.Core.HttpStatusViewModel
@{
    Model.Metadata.Title = "Page unavailable";
    Model.Metadata.DateModified = new DateTimeOffset(new DateTime(2019, 3, 22));
    Model.Metadata.IsInSearch = false;
    Model.BodyCssClass = "no-breadcrumb";

    Context.Response.StatusCode = 500;
}
@section Breadcrumb {}
<div class="full-page">
    <div class="content text-content">
        <h1>Page unavailable</h1>
        <p>Sorry this page is temporarily unavailable.</p>
        <p>Please try again later.</p>

        @if (!string.IsNullOrEmpty(Model.RequestId))
        {
            <p class="request-id"><small>Request ID: <code>@Model.RequestId</code></small></p>
        }
    </div>
</div>

