@model Escc.EastSussexGovUK.Core.BaseViewModel
@using Escc.EastSussexGovUK.Views
@{
    if (Model == null) { throw new NotSupportedException("This view requires a model based on Escc.EastSussexGovUK.Core.BaseViewModel"); }
    Model.EsccWebsiteView = EsccWebsiteView.Plain;
}
<!DOCTYPE html>
<html lang="en" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml" xmlns:og="http://ogp.me/ns#"
      xmlns:fb="https://www.facebook.com/2008/fbml" prefix="og: http://ogp.me/ns# fb: https://www.facebook.com/2008/fbml">
<head>
    @if (Model == null) { throw new NotSupportedException("This view requires a model based on Escc.EastSussexGovUK.Core.BaseViewModel"); }
    @RenderSection("ContentExperiment", required: false)
    <meta charset="UTF-8" />
    @{ await Html.RenderPartialAsync("~/_Metadata_Head.cshtml", Model.Metadata); }
    @RenderSection("Metadata", required: false)
</head>
<body>
    @RenderBody()
    @{ await Html.RenderPartialAsync("~/_Metadata_Body.cshtml", Model.Metadata); }
</body>
</html>

@{  // Do not render these sections for this layout
    if (IsSectionDefined("Header")) { IgnoreSection("Header"); }
    if (IsSectionDefined("Breadcrumb")) { IgnoreSection("Breadcrumb"); }
    if (IsSectionDefined("Footer")) { IgnoreSection("Footer"); }
    if (IsSectionDefined("JavaScript")) { IgnoreSection("JavaScript"); }
}