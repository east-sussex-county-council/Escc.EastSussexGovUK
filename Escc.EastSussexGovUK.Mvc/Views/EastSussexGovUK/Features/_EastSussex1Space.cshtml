@using Escc.EastSussexGovUK.Features
@model Escc.EastSussexGovUK.Mvc.BaseViewModel
@if (Model != null && Model.ShowEastSussex1SpaceWidget)
{
    @Html.Partial("~/Views/EastSussexGovUK/_FeatureDependency.cshtml", new EastSussex1SpaceSearch() { ShowEastSussex1SpaceSearch = Model.ShowEastSussex1SpaceWidget })
    <div class="supporting large">
        <div id="marketplace-search-widget">
            <div id="logo">
                <img src="https://1space.eastsussex.gov.uk/Skins/EastSussex/Images/1Space.svg" alt="East Sussex 1Space logo" />
            </div>
            <p id="text-area-1">
                Find the help you need
            </p>
            <div id="bottom-region">
                <p id="text-area-2">
                    A directory of services, groups and organisations
                </p>
                <form method="GET" action="https://1space.eastsussex.gov.uk/Search">
                    <label for="oneSpace" class="aural">Search East Sussex 1Space</label>
                    <input type="text" name="keywords" value="What are you looking for?" id="oneSpace" />
                    <button type="submit" name="Go" class="button">
                        <div>
                            <span class="search">Go</span>
                        </div>
                    </button>
                </form>
            </div>
        </div>
    </div>
}
